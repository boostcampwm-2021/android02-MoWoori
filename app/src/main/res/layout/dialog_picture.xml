<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view_dialog_picture_camera"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@color/sky_blue_F2F6FF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_dialog_picture_gallery"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@color/sky_blue_F2F6FF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/view_dialog_picture_camera"
            app:layout_constraintTop_toTopOf="@id/view_dialog_picture_camera"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/tv_dialog_picture_camera_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_camera"
            app:layout_constraintBottom_toTopOf="@id/tv_dialog_picture_camera"
            app:layout_constraintEnd_toEndOf="@id/view_dialog_picture_camera"
            app:layout_constraintStart_toStartOf="@id/view_dialog_picture_camera"
            app:layout_constraintTop_toTopOf="@id/view_dialog_picture_camera" />

        <TextView
            android:id="@+id/tv_dialog_picture_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_picture_camera"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tv_dialog_picture_camera_icon"
            app:layout_constraintStart_toStartOf="@+id/tv_dialog_picture_camera_icon"
            app:layout_constraintTop_toBottomOf="@id/tv_dialog_picture_camera_icon" />

        <View
            android:background="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/view_dialog_picture_camera"
            app:layout_constraintStart_toEndOf="@id/tv_dialog_picture_camera_icon"
            app:layout_constraintEnd_toStartOf="@id/tv_dialog_picture_gallery_icon"
            android:layout_width="2dp"
            android:layout_height="0dp" />
        <TextView
            android:id="@+id/tv_dialog_picture_gallery_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_gallery"
            app:layout_constraintBottom_toTopOf="@id/tv_dialog_picture_gallery"
            app:layout_constraintEnd_toEndOf="@id/view_dialog_picture_gallery"
            app:layout_constraintStart_toStartOf="@id/view_dialog_picture_gallery"
            app:layout_constraintTop_toTopOf="@id/view_dialog_picture_gallery" />

        <TextView
            android:id="@+id/tv_dialog_picture_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_picture_gallery"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/view_dialog_picture_gallery"
            app:layout_constraintEnd_toEndOf="@+id/tv_dialog_picture_gallery_icon"
            app:layout_constraintStart_toStartOf="@+id/tv_dialog_picture_gallery_icon"
            app:layout_constraintTop_toBottomOf="@id/tv_dialog_picture_gallery_icon" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
