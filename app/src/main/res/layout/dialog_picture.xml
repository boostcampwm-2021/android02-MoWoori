<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/container_dialog_picture_camera"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/view_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/container_dialog_picture_gallery"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/view_black"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/tv_dialog_picture_camera_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_camera"
            android:contentDescription="@string/desc_dialog_picture_camera_icon"
            app:layout_constraintBottom_toTopOf="@id/tv_dialog_picture_camera"
            app:layout_constraintEnd_toStartOf="@id/view_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_dialog_picture_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/dialog_picture_camera"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tv_dialog_picture_camera_icon"
            app:layout_constraintStart_toStartOf="@+id/tv_dialog_picture_camera_icon"
            app:layout_constraintTop_toBottomOf="@id/tv_dialog_picture_camera_icon" />

        <View
            android:id="@+id/view_black"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_dialog_picture_gallery_icon"
            app:layout_constraintStart_toEndOf="@id/tv_dialog_picture_camera_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/tv_dialog_picture_gallery_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_gallery"
            android:contentDescription="@string/desc_dialog_picture_gallery_icon"
            app:layout_constraintBottom_toTopOf="@id/tv_dialog_picture_gallery"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/view_black"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_dialog_picture_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/dialog_picture_gallery"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tv_dialog_picture_gallery_icon"
            app:layout_constraintStart_toStartOf="@+id/tv_dialog_picture_gallery_icon"
            app:layout_constraintTop_toBottomOf="@id/tv_dialog_picture_gallery_icon" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
